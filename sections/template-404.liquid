<div class="max-w-md content-center justify-center">
  <div class="text-5xl font-bold my-4">{{ section.settings.title }}</div>
  <div class="my-4">
    <p class="text-base md:text-xl leading-normal">
      {{ section.settings.subtitle }}
    </p>
  </div>
  <div class="my-6">
    {% if section.settings.button_url == blank %}
      {% assign shop_url = shop.secure_url %}
    {% else %}
      {% assign shop_url = section.settings.button_url %}
    {% endif %}
    <a class="px-4 inline py-2 text-base font-medium shadow bg-green-600 hover:bg-green-800 text-white" href="{{ shop_url  }}">
      {{ section.settings.button-label }}</a>
  </div>
</div>


{% schema %}
  {
    "name": "Template 404",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "404",
        "label": "404 Heading Title"
      }, {
        "type": "text",
        "id": "subtitle",
        "default": "The page that your looking for is not found",
        "label": "404 Subtitle Text"
      }, {
        "type": "text",
        "id": "button-label",
        "default": "Return Homepage",
        "label": "404 Button Label"
      }, {
        "type": "url",
        "id": "button_url",
        "label": "Button URL"
      }
    ]
  }
{% endschema %}